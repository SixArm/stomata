<%= form_for(@post, :html => {:class => 'new_post well'}) do |f| %>
  <%= f.label 'title' %>
  <%= f.text_field :title, :class => 'title' %>
  <br />

  <%= f.label 'content' %>
  <%= f.text_area :content, :class => 'content' %>
  <br />

  <button type="submit" class="btn">Submit</button>
<% end %>  